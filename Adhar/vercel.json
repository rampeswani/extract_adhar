{
    "builds": [
      {
        "src": "Adhar/manage.py",
        "use": "@vercel/python",
        "config": {
          "runtime": "python3.10",
          "buildCommand": "pip install -r requirements.txt && python3 manage.py collectstatic --noinput --clear"
        }
      },
      {
        "src": "static/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "Adhar/manage.py"
      }
    ]
  }
  