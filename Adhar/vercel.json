{
    "builds": [{
        "src": "Adhar/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.10",
    "buildCommand": "pip install -r requirements.txt && python3 manage.py collectstatic --noinput --clear"
    }
    },
    {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": { "distDir": "staticfiles_build" }
    }],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "Adhar/wsgi.py"
        }
    ]
}